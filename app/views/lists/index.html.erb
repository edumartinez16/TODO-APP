<p id="notice"><%#= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-4">
      <h3 class="text-center"><%= link_to 'Create New List', new_list_path %></h3>
    </div>
    <div class="col-4">
      <h3 class="text-center"><%= link_to('Generate Report CSV', lists_path(format: 'csv')) %></h3>
    </div>
    <div class="col-4">
      <h3 class="text-center"><%= link_to('Generate Report PDF', lists_path(format: 'pdf')) %></h3>
    </div>
    <div class="col-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col" colspan="5" class="text-center"><h1 class="text-center">Lists</h1></th>
          </tr>
        </thead>
        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <thead class="thead-dark">
                <th> <%= list.name %> </th>
                <th> <%= link_to 'Show', list %> </th>
                <th> <%= link_to 'Edit', edit_list_path(list) %> </th>
                <th> <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %> </th>
                <th> <%= link_to 'New Task', new_task_path(list) %> </th>
              </thead>
                <tr>
                  <% list.tasks.each do |task| %>
                    <td> <%= task.description %> </td>
                    <td> <%= task.limit %> </td>
                    <td> <%= link_to 'Edit', edit_task_path(task) %> </td>
                    <td> <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
                    <td> </td>
                </tr>
                  <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br> 
</div>

