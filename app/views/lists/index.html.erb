<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Lists</h1>
  <div class="row">
    <div class="col-6">
      <h2>Name</h2>
    </div>
  </div>
  <hr>
  <% @lists.each do |list| %>
    <div class="row">
      <div class="col-4">
        <h4><%= list.name %></h4>
        <%= list.id %>
      </div>
      <div class="col-6 d-flex justify-content-between offset-2">
        <%= link_to 'Show', list %>
        <%= link_to 'Edit', edit_list_path(list) %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'New Task', new_task_path %>
      </div>
    </div>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.description %></td>
        <td><%= task.limit %></td>
        <td><%= task.list_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <hr>
  <% end %>
  <br>
  
  <p><%= link_to('Generate Report PDF', lists_path(format: 'pdf')) %></p>
  <p><%= link_to('Generate Report CSV', lists_path(format: 'csv')) %></p>
  <h3><%= link_to 'New List', new_list_path %></h3>
</div>

