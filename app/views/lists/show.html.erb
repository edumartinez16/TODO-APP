<p id="notice"><%= notice %></p>

<h1 class="text-center"><%= @list.name %></h1>
<div class="container-fluid">
  <div class="row justify-content-end">
    <div class="col-2 mr-auto p-2">
      <button class="btn btn-success">
        <%= link_to 'New Task', new_task_path, :class => "btn", :style=> 'color:#FFFFFF;'%>
      </button>
    </div>
    <div class="col-3 p-2 text-right">
      <button class="btn btn-primary">
        <%= link_to 'Edit List', edit_list_path(@list), :class => "btn", :style=> 'color:#FFFFFF;'%>
      </button>
      <button class="btn btn-secondary ">
        <%= link_to 'Back', :back, :class => "btn", :style=> 'color:#FFFFFF;s'%>
      </button>
    </div>
  </div>
</div>

<p id="notice"><%#= notice %></p>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Description</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.limit %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>